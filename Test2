public class Main {
    public static void main(String[] args) {
        // Declare and initialize two integers
        int num1 = 20;
        int num2 = 6;

        // Arithmetic Operators
        System.out.println("Arithmetic Operators:");
        System.out.println("Addition (+): " + (num1 + num2));        // 20 + 6 = 26
        System.out.println("Subtraction (-): " + (num1 - num2));     // 20 - 6 = 14
        System.out.println("Multiplication (*): " + (num1 * num2));  // 20 * 6 = 120
        System.out.println("Division (/): " + (num1 / num2));        // 20 / 6 = 3
        System.out.println("Modulus (%): " + (num1 % num2));         // 20 % 6 = 2

        // Assignment Operators
        System.out.println("\nAssignment Operators:");

        int result = 10;
        System.out.println("Initial value: " + result);

        result += 5; // result = result + 5
        System.out.println("After += 5: " + result); // 15

        result -= 3; // result = result - 3
        System.out.println("After -= 3: " + result); // 12

        result *= 2; // result = result * 2
        System.out.println("After *= 2: " + result); // 24

        result /= 4; // result = result / 4
        System.out.println("After /= 4: " + result); // 6

        result %= 4; // result = result % 4
        System.out.println("After %= 4: " + result); // 2
    }
}
